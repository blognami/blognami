{
  "private": true,
  "type": "module",
  "author": "Jody Salt",
  "license": "MIT",
  "scripts": {
    "clean": "lerna run clean && rm -rf ./node_modules",
    "start": "yarn start:demo",
    "watch": "yarn watch:demo",
    "start:demo": "lerna run start --scope demo --stream",
    "watch:demo": "nodemon -e js,jsx,md,css,html --exec 'yarn start:demo'",
    "start:blognami.com": "lerna run start --scope blognami.com --stream",
    "watch:blognami.com": "nodemon -e js,jsx,md,css,html --exec 'yarn start:blognami.com'",
    "test": "yarn test:unit && yarn test:models && yarn test:e2e",
    "test:unit": "lerna run test:unit --stream",
    "test:models": "lerna run test:models --stream",
    "test:e2e": "lerna run test:e2e --stream",
    "cypress:open": "lerna run cypress:open --scope demo --stream",
    "publish-all": "lerna publish from-package --yes",
    "version-all": "lerna version"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "nodemon": "^2.0.12"
  },
  "workspaces": [
    "packages/*"
  ]
}
