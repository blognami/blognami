{
  "private": true,
  "type": "module",
  "author": "Jody Salt",
  "license": "MIT",
  "scripts": {
    "clean": "npm run clean && rm -rf ./node_modules",
    "start": "npm start --workspace demo & npm start  --workspace pinstripejs.com",
    "start:pinstripejs.com": "npm run start --workspace pinstripejs.com",
    "start:blognami.com": "npm run start --workspace blognami.com",
    "watch": "nodemon -e js,jsx,md,css,html --exec 'npm run start'",
    "test": "npm run test:unit && npm run test:services && npm run test:models && npm run test:cli && npm run test:e2e",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:services": "npm run test:services --workspace demo",
    "test:models": "npm run test:models --workspace demo",
    "test:e2e": "npm run test:e2e --workspace demo",
    "test:cli": "npm run test:cli --workspace demo",
    "playwright:open": "npm run playwright:open --workspace demo",
    "version-all": "npm version minor --workspaces",
    "publish-all": "npm publish --workspaces",
    "reset-databases": "npm run reset-database --workspaces --if-present",
    "test:quick": "QUICK=true npm run test:unit && QUICK=true npm run test:e2e",
    "ralph": "bash scripts/ralph-docker-run.sh",
    "ralph:once": "bash scripts/ralph-docker-run.sh -e RALPH_ITERATIONS=1",
    "ralph:docker:build": "docker build -f Dockerfile.ralph --build-arg GIT_USER_NAME=\"$(git config user.name)\" --build-arg GIT_USER_EMAIL=\"$(git config user.email)\" -t blognami-ralph .",
    "ralph:docker:token": "claude setup-token",
    "ralph:docker:clean": "docker volume rm blognami-ralph-nm",
    "ralph:docker:shell": "bash scripts/ralph-docker-run.sh -it -- bash",
    "ralph:reset": "echo '[]' > prd.json && > progress.txt"
  },
  "dependencies": {
    "nodemon": "^3.1.4"
  },
  "workspaces": [
    "packages/*",
    "packages/@blognami/*",
    "packages/@pinstripe/*"
  ]
}
